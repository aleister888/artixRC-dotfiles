#!/bin/sh
# Script for unmounting android devices

user="$(whoami)"

# Definir la ruta completa del directorio de inicio del usuario
HOME_DIR="/home/$user"

unmountandroid() {
    # Obtener el dispositivo simple-mtpfs montado y permitir al usuario seleccionar cu谩l desmontar
    chosen="$(awk '/simple-mtpfs/ {print $2}' /etc/mtab | dmenu -p "Que dispositivo desmontar?")" || exit 1

    # Verificar si se seleccion贸 un dispositivo para desmontar
    if [ -z "$chosen" ]; then
        exit
    fi

    # Intentar desmontar el dispositivo seleccionado
    if umount -l "$chosen"; then
        # Si el desmontaje es exitoso, mostrar una notificaci贸n
            notify-send " Dispositivo Android $chosen desmontado."
    else
        # Si falla el desmontaje, mostrar un mensaje de error
        echo "Error: Fall贸 el desmontar $chosen"
    fi
}

# Llamar a la funci贸n unmountandroid
unmountandroid
